        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="IdEmpleado">Empleado</label>
                       @Html.Partial("_CmbEmpleado_Planificacion", Model)
                       
                    @Html.ValidationMessageFor(q => q.IdEmpleado, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="IdCargo">Horario</label>
                    @Html.DevExpress().ComboBoxFor(q => q.IdHorario, settings =>
               {
                   settings.Name = "IdHorario";
                   settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
                   settings.Properties.DisplayFormatString = "[{0}] - {1}";
                   settings.Properties.Columns.Add("IdHorario", "ID").Width = System.Web.UI.WebControls.Unit.Percentage(10);
                   settings.Properties.Columns.Add("Descripcion", "Horario").Width = System.Web.UI.WebControls.Unit.Percentage(90);
                   //Campo ID
                   settings.Properties.ValueField = "IdHorario";
                   settings.Properties.ValueType = typeof(int);
                   settings.Properties.TextField = "Descripcion";
                   //Boton para seleccionar ningun registro
                   settings.Properties.ClearButton.DisplayMode = ClearButtonDisplayMode.Always;
                   settings.Properties.NullText = "== Seleccione ==";
                   settings.Properties.DropDownStyle = DropDownStyle.DropDown;

               }).BindList(ViewBag.lst_horario).GetHtml()
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <div class="box-footer">
                        <label for=""></label>
                        <button type="button" onclick="Buscar();" id="btnconsultar" class="btn btn-primary">Buscar</button>
                    </div>
                </div>
            </div>

        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="cb_Observacion">Observación</label>
                    @Html.TextBoxFor(q => q.Observacion, new { @class = "form-control" })
                    @Html.ValidationMessageFor(q => q.Observacion, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="cb_Observacion">Detalle de la planificación</label>
                        @Html.Action("GridViewPartial_horario_planificacion_det")
                    </div>
                </div>
            </div>
        </div>


        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a class="btn btn-default" href="@Url.Action("Index","HorarioPlanificacion",new { Area = "RRHH", @id="grid"},null)">Cancelar</a>
        </div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
        }


        <script>
            function Buscar() {
                var datos = {
                    fi: FechaInicio.GetValue(),
                    ff: FechaFin.GetValue(),
                    IdNomina: IdNomina.GetValue(),
                    IdSucursal: IdSucursal.GetValue(),
                    IdDivision: IdDivision.GetValue(),
                    IdArea: IdArea.GetValue(),
                    IdDepartamento: IdDepartamento.GetValue(),
                    IdCargo: IdCargo.GetValue(),
                    IdEmpleado: IdEmpleado.GetValue(),
                    IdHorario: IdHorario.GetValue(),
                    IdTransaccionSession: $("#IdTransaccionSession").val()


                }
                $.ajax({
                    type: 'POST',
                    data: JSON.stringify(datos),
                    url: '@Url.Action("Consultar", "HorarioPlanificacion", new { Area = "RRHH" })',
                    async: false,
                    bDeferRender: true,
                    bProcessing: true,
                    dataType: 'json',
                    contentType: 'application/json; charset=utf-8',
                    success: function (data) {

                        GridViewPartial_horario_planificacion_det.PerformCallback();

                    },
                    error: function (error) {
                    }
                });
            };
        </script>
