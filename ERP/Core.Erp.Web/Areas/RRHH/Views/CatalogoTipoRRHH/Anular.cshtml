@model Core.Erp.Info.RRHH.ro_catalogoTipo_Info
@{
    ViewBag.Title = "Anular Catalogo ";
    if (Session["IdUsuario"] == null || Session["IdEmpresa"] == null)
    {
        Response.Redirect("~/Account/Login");
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/ValidacionBotonSubmit.js"></script>
@using (Html.BeginForm("Anular", "CatalogoTipoRRHH", FormMethod.Post, new { @class = "form", @role = "form" }))
{
    @Html.HiddenFor(m => m.IdTipoCatalogo);
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="Codigo">Código*</label>
                    @Html.TextBoxFor(q => q.Codigo, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="tc_Descripcion">Descripción*</label>
                    @Html.TextBoxFor(q => q.tc_Descripcion, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
        </div>
    </div>

    <div class="box-footer">
        <button type="submit" class="btn btn-danger">Anular</button>
        <a class="btn btn-default" href="@Url.Action("Index","CatalogoTipoRRHH", new { IdTipoCatalogo = ViewBag.IdTipoCatalogo, Area = "RRHH"  },null)">Cancelar</a>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
}
