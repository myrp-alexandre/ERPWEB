                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="precio_1">Precio</label>
                            @Html.TextBoxFor(q => q.precio_1, new { @class = "form-control", @id = "precio_1" })
                            @Html.ValidationMessageFor(q => q.precio_1, "", new { @class = "text-danger" })
                        </div>
