
@using System.Web.UI.WebControls;
@{
    var comboBox = Html.DevExpress().ComboBox(settings =>
    {
        settings.Name = "IdProducto";
        settings.Width = Unit.Percentage(100);
        settings.Properties.DropDownWidth = Unit.Percentage(100);
        settings.Properties.DropDownStyle = DropDownStyle.DropDown;
        settings.CallbackRouteValues = new { Controller = "FacturacionReportes", Action = "cmbProductoHijo_Facturacion", Area = "Reportes" };
        settings.Properties.CallbackPageSize = 15;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.ValueField = "IdProducto";
        settings.Properties.ValueType = typeof(decimal);
        settings.Properties.TextField = "pr_descripcion";
        settings.Properties.TextFormatString = "[{0}] {1}";
        settings.Properties.FilterMinLength = 3;
        settings.Properties.Columns.Add("IdProducto", "ID").Width = System.Web.UI.WebControls.Unit.Percentage(10);
        settings.Properties.Columns.Add("pr_descripcion", "Descripción").Width = System.Web.UI.WebControls.Unit.Percentage(50);

        settings.Properties.ClearButton.DisplayMode = ClearButtonDisplayMode.Always;
        settings.Properties.NullText = "== Seleccione ==";
        settings.Properties.AllowNull = true;
    })
    .BindList(new Core.Erp.Web.Areas.Reportes.Controllers.FacturacionReportesController().get_list_ProductoHijo_bajo_demanda, new Core.Erp.Web.Areas.Reportes.Controllers.FacturacionReportesController().get_info_producto_bajo_demanda)
    .Bind(Model.IdProducto);

}
@comboBox.GetHtml()